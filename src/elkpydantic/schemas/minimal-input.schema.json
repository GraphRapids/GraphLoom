{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Faerkeren/ElkPydantic/main/src/elkpydantic/schemas/minimal-input.schema.json",
  "description": "Schema for ElkPydantic minimal graph input (canonical syntax only).",
  "$defs": {
    "MinimalEdgeIn": {
      "properties": {
        "id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Id"
        },
        "label": {
          "anyOf": [
            {
              "maxLength": 40,
              "minLength": 1,
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Label"
        },
        "type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Type"
        },
        "from": {
          "maxLength": 36,
          "minLength": 1,
          "pattern": "^[^:]{1,20}(:[^:]{1,15})?$",
          "title": "From",
          "type": "string"
        },
        "to": {
          "maxLength": 36,
          "minLength": 1,
          "pattern": "^[^:]{1,20}(:[^:]{1,15})?$",
          "title": "To",
          "type": "string"
        }
      },
      "required": [
        "from",
        "to"
      ],
      "additionalProperties": false,
      "title": "MinimalEdgeIn",
      "type": "object"
    },
    "MinimalNodeIn": {
      "properties": {
        "name": {
          "maxLength": 20,
          "minLength": 1,
          "pattern": "^[^:]*$",
          "title": "Name",
          "type": "string"
        },
        "type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Type"
        },
        "id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Id"
        },
        "nodes": {
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/MinimalNodeIn"
              },
              {
                "maxLength": 20,
                "minLength": 1,
                "pattern": "^[^:]*$",
                "type": "string"
              }
            ]
          },
          "title": "Nodes",
          "type": "array"
        },
        "links": {
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/MinimalEdgeIn"
              },
              {
                "pattern": "^\\s*[^:]{1,20}(:[^:]{1,15})?\\s*->\\s*[^:]{1,20}(:[^:]{1,15})?\\s*$",
                "type": "string"
              }
            ]
          },
          "title": "Links",
          "type": "array"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "title": "MinimalNodeIn",
      "type": "object"
    }
  },
  "properties": {
    "nodes": {
      "items": {
        "anyOf": [
          {
            "$ref": "#/$defs/MinimalNodeIn"
          },
          {
            "maxLength": 20,
            "minLength": 1,
            "pattern": "^[^:]*$",
            "type": "string"
          }
        ]
      },
      "title": "Nodes",
      "type": "array"
    },
    "links": {
      "items": {
        "anyOf": [
          {
            "$ref": "#/$defs/MinimalEdgeIn"
          },
          {
            "pattern": "^\\s*[^:]{1,20}(:[^:]{1,15})?\\s*->\\s*[^:]{1,20}(:[^:]{1,15})?\\s*$",
            "type": "string"
          }
        ]
      },
      "title": "Links",
      "type": "array"
    }
  },
  "additionalProperties": false,
  "anyOf": [
    {
      "required": [
        "nodes"
      ],
      "properties": {
        "nodes": {
          "minItems": 1
        }
      }
    },
    {
      "required": [
        "links"
      ],
      "properties": {
        "links": {
          "minItems": 1
        }
      }
    }
  ],
  "title": "MinimalGraphIn",
  "type": "object"
}
